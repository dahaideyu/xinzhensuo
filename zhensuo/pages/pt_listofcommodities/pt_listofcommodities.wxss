.tab-h {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fff;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;

}

.tab-item {
    display: inline-block;
    width: 50%;
    text-align: center;
}

.tab-item.active {
    color: #00acc0;
    position: relative;
}

.tab-item.active:after {
    content: "";
    display: block;
    height:1px;
    width:100%;
    background: #00acc0;
    position: absolute;
    bottom: 0;
    left: 5rpx;
    border-radius: 16rpx;
}

.item-ans {
    width: 100%;
    display: flex;
    flex-grow: row no-wrap;
    justify-content: space-between;
    padding: 30rpx;
    box-sizing: border-box;
    height: 180rpx;
    align-items: center;
    border-bottom: 1px solid #f2f2f2;
}

.avatar {
    width: 300rpx;
    height: 150rpx;
    position: relative;
    padding-right: 30rpx;
}

.avatar .img {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.avatar .doyen {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: -2px;
    right: 20rpx;
}

.expertInfo {
    font-size: 12px;
    flex-grow: 2;
    color: #b0b0b0;
    line-height: 1.5em;
}

.expertInfo .name {
    font-size: 16px;
    color: #666;
    margin-bottom: 6px;
}

.askBtn {
    width:60rpx;
    height: 50rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 14px;
    border-radius: 60rpx;
}

.tab-content {
    margin-top: 80rpx;
}

.scoll-h {
    height: 100%;
}
.like{
    width: 100%;

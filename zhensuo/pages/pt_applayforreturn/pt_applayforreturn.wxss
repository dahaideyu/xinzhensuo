.title {
    background: #00acc0;
    padding: 30rpx;
    overflow: hidden;
}

.img {
    background: #fff;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    float: left;
}

.img>image {
    width: 100%;
    height: 100%;
}

.title_name {
    float: left;
    color: #fff;
    font-size: 30rpx;
    padding-left: 30rpx;
}

.left {
    float: left;
}

.left>image {
    width: 30rpx;
    height: 40rpx;
    padding-top: 5rpx;
    float: left;
}

.right {
    float: right;
    margin-top: 50rpx;
}

.right>image {
    width: 20rpx;
    height: 30rpx;
}

.adress {
    background: #fff;
    overflow: hidden;
    padding: 30rpx;

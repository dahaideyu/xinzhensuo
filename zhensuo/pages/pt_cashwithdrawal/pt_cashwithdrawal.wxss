page {
    background: #f4f4f4;
}

.title {
    overflow: hidden;
    padding-bottom: 100rpx;
}

.img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin: 130rpx auto 0rpx auto;
}

.img>image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.jifen {
    text-align: center;
    font-size: 40rpx;
    color: #00acc0;
    line-height: 100rpx;
}

.jifen>view:last-child {
    font-size: 60rpx;
    font-weight: bold;
}

.rule {
    background: #fff;
    padding: 0 30rpx;
}

.wrap {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    line-height: 120rpx;
    font-size: 30rpx;
    color: #666;
}

.left>image {
    width: 77rpx;
    height: 75rpx;
    padding-top: 20rpx;
    float: left;
}

.left>text {
    padding-left: 20rpx;
}

.right {
    font-size: 30rpx;
    color: #00acc0;
}

.jifen_wrap {
    line-height: 100rpx;
    font-size: 30rpx;
    color: #666;
}

.jifennumber {
    font-weight: bold;
    color: #555;
    padding-left:100rpx;
    padding-right:10rpx; 
}
button{
    width: 100%;
    position: fixed;
    bottom: 0;
    background: #00acc0;
    color: #fff;
    line-height: 100rpx;
    border-radius: 0;
    text-align: center;
}
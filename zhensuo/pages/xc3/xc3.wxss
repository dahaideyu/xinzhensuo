page {
    background: #f4f4f4;
}

.wrap {
    margin-top: 30rpx;
    overflow: hidden;
   margin-bottom: 100rpx;
}

.list {
    line-height: 100rpx;
    padding: 0 30rpx;
    background: #fff;
}

.title {
    display: flex;
    justify-content: space-between;
}

.img {
    width: 30rpx;
    height: 30rpx;
    float: left;
    padding-top: 37rpx;
}

.title_right {
    display: flex;
    justify-content: start;
}

.title_left {
    font-size: 30rpx;
    color: #00acc0;
}

.img1 {
    width: 50rpx;
    height: 30rpx;
}

.title_right {
    font-size: 30rpx;
    color: #666;
}

.read {
    padding-left: 10rpx;
}

.title_right>view:last-child {
    margin-left: 20rpx;
}

.content {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.content>view:first-child {
    color: #666;
    font-size: 28rpx;
    width: 70%;
    line-height: 30rpx;
}

.content_img {
    width: 30%;
}

.content_img>image {
    width: 100%;
    height: 182rpx;
    border-radius: 10rpx;
}

.list {
    border: 1px solid #eee;
}
.acitve{
    margin-top: 30rpx;
}
button{
    width: 100%;
    background: #00acc0;
    color: #fff;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    border-radius: 0;
}
page{
    background: #f4f4f4;
}
.wrap{
    width: 95%;
    margin: 0 auto;
}
.car{
    display: flex;
    justify-content: start;
    background: #01b2c4;
    width: 90%;
    margin: 0 auto;
    border-radius: 10rpx;
    margin-top: 30rpx;
    padding: 90rpx 30rpx;
}
.left{
    width: 125rpx;
    height: 125rpx;
    background: #fff;
    border-radius: 50%;
}
.left>image{
    width: 80%;
    height: 70%;
    border-radius: 50%;
    margin: 0 auto;
    display: block;
    padding-top: 20rpx;
}
.right>text{
    display: block;
    color: #fff;
}
.right{
    padding-left: 40rpx;
}
.right>text:first-child{
    font-size: 50rpx;
}
.right>text:last-child{
    line-height: 80rpx;
}
button{
    width: 100%;
    background: #00acc0;
    color: #fff;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    border-radius: 0;
}
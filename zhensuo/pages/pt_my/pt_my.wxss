/**index.wxss**/
page{
    background: #f4f4f4
}
.wrap{
    font-size: 20rpx;  
    background: #00acc0
}
.title{
    width: 100%;
    overflow: hidden;
    padding-bottom: 30rpx;
}
.head_portrait{
    width: 150rpx;
    height: 150rpx;
    float: left;
    border-radius: 50%;
    margin-left: 25rpx
}
.user_name{
    float: left;
    font-size: 35rpx;
    color: #fff;
    height: 150rpx;
    padding-left: 25rpx;
}
.user_name>text{
    display: block;
    padding-top: 30rpx;
}
.user_name>text:last-child{
    padding-top: 10rpx;
    font-size: 30rpx;
}
.profit{
    background: #fff;
    width: 100%;    
    border-radius: 15rpx 15rpx 0 0;
    min-height: 200rpx;
    padding: 0 30rpx;
}
.profit>view{
    float: left;
    width: 50%;
}
.common>text{
    display: block;
    text-align: center
}
.common>text:nth-child(1){
    font-size: 35rpx;
    color: #00acc0;
    line-height: 90rpx;
}
.common>text:nth-child(2){
    font-size: 40rpx;
    line-height: 90rpx;
    color: gray;
}
.charge_wrap{
    overflow: hidden;
    margin-top: -20rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}
.charge_list{
    background: #fff;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    padding: 0 30rpx;
    border-top: 1px solid #eee;
}
.charge_list>view{
    float: left;
    width: 50%;
    line-height: 100rpx;
}
.left>image{
    width: 50rpx;
    height: 50rpx;
    float: left;
    padding-top: 25rpx;
}
.left>text{
    float: left;
    line-height: 100rpx;
    padding-left: 30rpx;
    font-size: 30rpx;
    color: #666666;
}
.right{
    position: relative
}
.message_number>text{
    position: absolute;
    right: 50rpx;
    background: red;
    height: 4 0rpx;
    top: 32rpx;
    text-align: center;
    line-height: 40rpx;
    padding: 0 15rpx;
    font-size: 20rpx;
    color: #fff;
    border-radius: 50%
}
.right>image{
    width: 20rpx;
    height: 30rpx;
    float: right;
    padding-top: 35rpx;
    display: block;
}
.charge_last{
    border-top: none;
    border-bottom: 1px solid #eee;
}
.nav_button{
    position: fixed;
    width: 100%;
    bottom: 0;
    height: 100rpx;
    background: #fff;
    font-weight: bold;
    color: #666;
    font-size: 30rpx;
    line-height: 100rpx;
    border-top: 1px solid #eee;
}
.clinic{
    color: #00acc0;
}
.page_index{
    border-right: 1px solid #eee;
}
.nav_button>navigator{
    width: 49%;
    float: left;
    text-align: center;
}
.right_1{
    float: right
}
.right_1>image{
    width: 50rpx;
    height: 50rpx;
    padding-top: 50rpx;
    padding-right: 50rpx;
}
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 50rpx 32rpx;
}
.modal-input {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}
input-holder {
  color: #666;
  font-size: 28rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
.input-code{
    width:50%;
}
.btn-Code{
    border:1px solid #00acc0;
    width: 130rpx;
    font-size: 25rpx;
    text-align: center;
    padding: 8rpx 0;
    border-radius: 10rpx;
    background: #f4fbfc;
    color: #00acc0;
    height:70rpx;
    margin-top:10rpx;
}
.navbar{
    position: fixed;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    width: 100%;
    background: #fff;
}
.navbar>view{
    width: 50%;
    text-align: center;
    line-height: 100rpx;
    color: #666
}
.navbar>view:last-child{
    border-left: 1px solid #ccc;
    color: #00acc0;
}
.chose{
    color: #00acc0;
}